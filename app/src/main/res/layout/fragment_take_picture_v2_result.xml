<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_rectangle_r20"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_left_45"/>

    <ImageView
        android:id="@+id/iv_left_45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/iv_select"
        app:layout_constraintBottom_toTopOf="@id/btn_finish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_left_30"
        android:background="@drawable/shape_rectangle_r10"/>

    <TextView
        android:id="@+id/tv_left_45"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="좌45º"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_left_45"
        app:layout_constraintStart_toStartOf="@id/iv_left_45"
        app:layout_constraintEnd_toEndOf="@id/iv_left_45"/>

    <ImageView
        android:id="@+id/iv_left_30"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/iv_left_45"
        app:layout_constraintStart_toEndOf="@id/iv_left_45"
        app:layout_constraintEnd_toStartOf="@id/iv_front"
        android:background="@drawable/shape_rectangle_r10"/>

    <TextView
        android:id="@+id/tv_left_30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="좌30º"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_left_30"
        app:layout_constraintStart_toStartOf="@id/iv_left_30"
        app:layout_constraintEnd_toEndOf="@id/iv_left_30"/>

    <ImageView
        android:id="@+id/iv_front"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/iv_left_45"
        app:layout_constraintStart_toEndOf="@id/iv_left_30"
        app:layout_constraintEnd_toStartOf="@id/iv_right_30"
        android:background="@drawable/shape_rectangle_r10"/>

    <TextView
        android:id="@+id/tv_front"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="정면"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_front"
        app:layout_constraintStart_toStartOf="@id/iv_front"
        app:layout_constraintEnd_toEndOf="@id/iv_front"/>

    <ImageView
        android:id="@+id/iv_right_30"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/iv_left_45"
        app:layout_constraintStart_toEndOf="@id/iv_front"
        app:layout_constraintEnd_toStartOf="@id/iv_right_45"
        android:background="@drawable/shape_rectangle_r10"/>

    <TextView
        android:id="@+id/tv_right_30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="우30º"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_right_30"
        app:layout_constraintStart_toStartOf="@id/iv_right_30"
        app:layout_constraintEnd_toEndOf="@id/iv_right_30"/>

    <ImageView
        android:id="@+id/iv_right_45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/iv_left_45"
        app:layout_constraintStart_toEndOf="@id/iv_right_30"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_rectangle_r10"/>

    <TextView
        android:id="@+id/tv_right_45"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="우45º"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_right_45"
        app:layout_constraintStart_toStartOf="@id/iv_right_45"
        app:layout_constraintEnd_toEndOf="@id/iv_right_45"/>

    <com.google.android.material.button.MaterialButton
        style="@style/RoundButton"
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>