<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide_container_start"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide_container_end"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"/>

    <TextView
        android:id="@+id/tv_label_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="degrees 30"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/list_photo_30"
        app:layout_constraintStart_toStartOf="@id/guide_container_start"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_photo_30"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        tools:listitem="@layout/item_take_picture_result"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/list_photo_45"/>

    <TextView
        android:id="@+id/tv_label_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="degrees 45"
        app:layout_constraintBottom_toTopOf="@id/list_photo_45"
        app:layout_constraintStart_toStartOf="@id/guide_container_start"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_photo_45"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        tools:listitem="@layout/item_take_picture_result"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/list_photo_30"
        app:layout_constraintBottom_toTopOf="@id/list_photo_failure"/>

    <TextView
        android:id="@+id/tv_label_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="failure"
        app:layout_constraintBottom_toTopOf="@id/list_photo_failure"
        app:layout_constraintStart_toStartOf="@id/guide_container_start"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_photo_failure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/list_photo_45"
        app:layout_constraintBottom_toTopOf="@id/btn_retake"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="retake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        app:layout_constraintStart_toEndOf="@id/btn_retake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_retake"/>

</androidx.constraintlayout.widget.ConstraintLayout>